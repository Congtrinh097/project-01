# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBED_API_KEY=your_embedding_api_key_here  # Optional: separate key for embeddings (falls back to OPENAI_API_KEY)
OPENAI_BASE_URL=https://aiportalapi.stu-platform.live/jpe
OPENAI_MODEL=gpt-4o-mini

# Chatbot Configuration (optional, defaults shown)
CHATBOT_MAX_TOKENS=500
CHATBOT_TEMPERATURE=0.7
CHATBOT_MAX_HISTORY=10

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cv_analyzer

# Application Configuration
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx

# Hugging Face Configuration (for Resume Generation)
HF_TOKEN=your_huggingface_token_here
HF_MODEL_NAME=meta-llama/Llama-3.1-8B  # Optional: defaults to Llama-3.1-8B

# Tavily Configuration (for Main Bot web search - optional)
TAVILY_API_KEY=your_tavily_api_key_here

